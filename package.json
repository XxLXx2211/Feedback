{
  "name": "feedback-system",
  "version": "1.1.0",
  "description": "Sistema de Feedback y Análisis de PDF con IA",
  "main": "index.js",
  "scripts": {
    "start": "node server/app.js",
    "server": "nodemon server/app.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "cd client && npm run build",
    "render-build": "npm run install-all && npm run build",
    "render-start": "node server/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "create-indexes": "node server/scripts/createIndexes.js",
    "monitor": "node -e \"require('./server/services/monitorService').getSystemInfo().then(console.log)\"",
    "optimize": "npm run create-indexes && echo 'Optimizaciones aplicadas correctamente'",
    "clear-cache": "node -e \"require('./server/services/cacheService').flush() && console.log('Caché limpiada correctamente')\""
  },
  "dependencies": {
    "concurrently": "^8.0.1",
    "dotenv": "^16.4.7",
    "mongodb": "^6.15.0",
    "mongoose": "^8.13.2",
    "bull": "^4.12.2",
    "node-cache": "^5.1.2",
    "ioredis": "^5.3.2",
    "express": "^4.18.3",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "llmwhisperer-client": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  }
}
