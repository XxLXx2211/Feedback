# =========================================================
# CONFIGURACIÓN COMPLETA DEL PROYECTO FEEDBACK (EJEMPLO)
# =========================================================

# =========================================================
# CONFIGURACIÓN DEL SERVIDOR PRINCIPAL
# =========================================================
PORT=10000
NODE_ENV=production

# =========================================================
# BASES DE DATOS
# =========================================================
# Base de datos principal
MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/database?retryWrites=true&w=majority

# Base de datos para PDFs
PDF_MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/PDFs?retryWrites=true&w=majority

# =========================================================
# SEGURIDAD
# =========================================================
# Clave para firmar tokens JWT
JWT_SECRET=your_jwt_secret_key

# =========================================================
# API KEYS
# =========================================================
# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# LLM Whisperer
LLMWHISPERER_API_KEY=your_llmwhisperer_api_key
LLMWHISPERER_BASE_URL_V2=https://llmwhisperer-api.us-central.unstract.com/api/v2

# =========================================================
# CONFIGURACIÓN DEL CLIENTE (FRONTEND)
# =========================================================
# URL de la API para el cliente React
REACT_APP_API_URL=https://sermalite-feedback-api.onrender.com/api
REACT_APP_VERSION=2.0
REACT_APP_ENVIRONMENT=production
REACT_APP_OPTIMIZED=true

# =========================================================
# CONFIGURACIÓN DE OPTIMIZACIONES
# =========================================================
CACHE_TTL=300
CACHE_CHECK_PERIOD=60
MAX_CONCURRENT_PROCESSING=8
PDF_PROCESSING_TIMEOUT=300

# =========================================================
# CONFIGURACIÓN DE RENDER
# =========================================================
# Desactivar Redis para reducir uso de recursos
REDIS_ENABLED=false

# Configuración para CI/CD
CI=false
